{% endcomment %}


{% include 'atb-render' field:'section_id' %}
{% assign section_id = val %}
{% include 'atb-render' field:'atb_full_width' %}
{% assign atb_full_width = val %}
{% include 'atb-render' field:'atb_section_title' %}
{% assign atb_section_title = val %}
{% include 'atb-render' field:'atb_text' %}
{% assign atb_text = val %}
{% include 'atb-render' field:'atb_text_size' %}
{% assign atb_text_size = val %}
{% if atb_full_width == blank %}
{% assign atb_full_width = false %}
{% else %}
{% assign atb_full_width = true %}
{% endif %}

<section id="shopify-section-{{section_id}}" class="shopify-section index-section">
<div class="page-width rich-text">
  <div class="grid">
    <div class="grid__item {% unless atb_full_width %} medium-up--two-thirds medium-up--push-one-sixth{% endunless %}">
      {% if atb_section_title != blank %}
        <div class="rich-text__heading--{{ atb_text_size }} text-center">
          <h2 class="h3">{{ atb_section_title | escape }}</h2>
        </div>
      {% endif %}
      {% if atb_text != blank %}
        <div class="rich-text__text--{{ atb_text_size }} rte-setting text-center">{{ atb_text }}</div>
      {% endif %}
    </div>
  </div>
</div>




</section>